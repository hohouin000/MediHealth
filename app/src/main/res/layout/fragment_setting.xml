<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/buildNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="28dp"
        android:text="MH1000.0001"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@+id/lblbuildNumber"
        app:layout_constraintTop_toBottomOf="@+id/buildInfo" />

    <TextView
        android:id="@+id/buildInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="28dp"
        android:text="Version 1.0"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/buildNumber"
        app:layout_constraintLeft_toRightOf="@+id/lblbuildInfo" />

    <TextView
        android:id="@+id/lblbuildNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="164dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/build_number"
        android:textSize="15dp"
        app:layout_constraintRight_toLeftOf="@+id/buildNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblbuildInfo" />

    <TextView
        android:id="@+id/lblbuildInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/build_version"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/lblbuildNumber"
        app:layout_constraintRight_toLeftOf="@+id/buildInfo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/allRightsReserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_rights_reserved"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

</androidx.constraintlayout.widget.ConstraintLayout>